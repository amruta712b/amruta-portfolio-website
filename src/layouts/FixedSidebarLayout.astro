---
const { title } = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
	<head>
		<link href="https://fonts.googleapis.com/css2?family=Lilita+One&family=Source+Sans+3&display=swap" rel="stylesheet">
		<meta charset="UTF-8" />
		<meta name="description" content="My website description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<style>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			body {
				font-family: system-ui, sans-serif;
			}

			.layout {
				display: flex;
				min-height: 100vh;
			}
			.sidebar {
				position: fixed;
				top: 0;
				left: 0;
				width: 100px;
				height: 100vh;
				background: #ffffff;
				padding: 20px;
				overflow-y: auto;
				border-right: 1px solid #e9ecef;
			}

.main-content {
				margin-left: 100px;     /* padding 40px */
				flex: 1;
				background: #FBD21A;
			}
			.menu {
  list-style: none;
  padding: 0;
  margin: 0;
}
.menu a{
  text-decoration: none;
  color: #000;            /* change color if needed */
  font-family: 'Lilita One', cursive;
}
.menu a:hover {
  color: #FBD21A;            /* hover color */
}
			.nav-links {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}
.logo {
  width: 120%;     /* or try 50px or 100px depending on your sidebar width */
  margin: 1rem auto;
  display: block;

}
			.socials {
				position: absolute;
				bottom: 20px;
				font-size: 18px;
				font-weight: bold;
				color: #333;
			}

		</style>
	</head>
	<body>
		<div class="layout">
			<aside class="sidebar">
				<div class="logo">
					<a href="/">
					<img src="/images/logo.png" class="logo">
					</a>
				</div>
				<div class="menu">
					<nav>
					 <ul class="nav-links">
          <li><a href="/about">About</a></li>
          <li><a href="/cv">CV</a></li>
          <li><a href="/works">Works</a></li>
          <li><a href="/play">Play</a></li>
        </ul>
				</nav>
				</div>
				<div class="socials">Socials</div>
			</aside>
			<main class="main-content">
				<slot />
			</main>
		</div>
	</body>
</html>