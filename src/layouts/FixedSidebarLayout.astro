---
const { title } = Astro.props;
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
     <link rel="icon" href="/favicon.ico" sizes="any">
<link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png">
<link rel="apple-touch-icon" sizes="180x180" href="/images/favicon-180x180.png">
    <link
      href="https://fonts.googleapis.com/css2?family=Lilita+One&family=Source+Sans+3&display=swap"
      rel="stylesheet"
    />
    <meta charset="UTF-8" />
    <meta name="description" content="My website description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: system-ui, sans-serif;
      }

      .layout {
        display: flex;
        min-height: 100vh;
      }
      .sidebar {
        position: fixed;
        top: 0;
        left: 0;
        width: 100px;
        height: 100vh;
        background: #ffffff;
        padding: 20px;
        overflow-y: auto;
        border-right: 1px solid #e9ecef;
        padding: 20px;
        overflow-y: auto;
        border-right: 1px solid rgba(255,255,255,0.3);
        transition: background 0.3s ease;

      }

      .main-content {
        margin-left: 100px; /* padding 40px */
        flex: 1;
        background: #fbd21a;
         margin-left: 100px;
        opacity: 0; /* fade-in animation */
        transform: translateY(10px);
        animation: fadeIn 0.6s ease forwards;
      }
      .menu {
        padding-top: 40px;
        list-style: none;
        padding: 0;
        margin: 0;
      }
      .menu a {
        text-decoration: none;
        color: #000; /* change color if needed */
        font-family: "Lilita One", cursive;
      }
      .menu a:hover {
        transform: scale(1.5);
        color: #fbd21a;
      }

      .nav-links {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }
      .nav-links:hover {
        transform: scale(1.1);
      }
      .menu-link {
        position: relative;
        text-decoration: none;
        color: #fbd21a;
        font-family: "Lilita One", cursive;
        display: inline-block;
      }
      .menu-link::after {
        content: "";
        position: absolute;
        width: 100%;
        height: 3px;
        bottom: -4px;
        left: 0;
        background-color: #fbd21a;
        transform: scaleX(0);
        transform-origin: left;
        transition: transform 0.3s ease;
      }

      .menu-link:hover::after {
        transform: scaleX(1);
      }

      .logo {
         display: flex;
         flex-direction: column;
        align-items: center;
        width: 80px;
        display: block;
        margin-left: -10px;
        width: 130%;
        display: block;
        transition: transform 0.3s ease;
        padding-bottom: 10px;
      }

      .socials {
        position: absolute;
        bottom: 20px;
        font-size: 18px;
        font-weight: bold;
        color: #333;
      }
      .social-icon {
        width: 24px; /* or adjust to your icon's best size */
        height: 24px;
        transition: transform 0.2s ease;
      }

      .social-icon:hover {
        transform: scale(1.2);
      }
      a {
        text-decoration: none;
      }

      .sidebar:hover {
        background: rgba(255, 255, 255, 0.75);
      }

      @keyframes fadeIn {
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }


      .menu-link::after {
        content: "";
        position: absolute;
        width: 0%;
        height: 3px;
        bottom: -4px;
        left: 0;
        background-color: #fbd21a;
        transition: width 0.3s ease;
      }
      .menu-link:hover::after {
        width: 100%;
      }
        .menu-link:hover {
        transform: scale(1.05);
        color: #fbd21a;
      }
      .logo:hover {
        transform: rotate(-5deg) scale(1.05); /* playful wobble */
      }

    </style>
  </head>
  <body>
    <div class="layout">
      <aside class="sidebar">
        <div class="logo">
          <a href="/">
            <img src="/images/logo6.png" class="logo" />
          </a>
        </div>
        <div class="menu">
          <nav>
            <ul class="nav-links">
              <li><a href="/about" class="menu-link">About</a></li>
              <li><a href="/cv" class="menu-link">CV</a></li>
              <li><a href="/Works" class="menu-link">Works</a></li>
              <li><a href="/play" class="menu-link">Play</a></li>
              <li><a href="/contact" class="menu-link">Contact</a></li>
            </ul>
          </nav>
        </div>
        <div class="socials">
          <a
            href="https://www.instagram.com/b.bxtxrt?igsh=MWRvYXNtbG5xdXR5Ng%3D%3D&utm_source=qr"
            target="_blank"
            rel="noopener"
          >
            <img
              src="/images/icons/instagram.png"
              alt="Instagram"
              class="social-icon"
            />
          </a>
          <a
            href="https://www.linkedin.com/in/amruta-bhatt-5153511a6/"
            target="_blank"
            rel="noopener"
          >
            <img
              src="/images/icons/linkedin.png"
              alt="LinkedIn"
              class="social-icon"
            />
          </a>
          <a
            href="https://www.behance.net/amrutabhatt1412"
            target="_blank"
            rel="noopener"
          >
            <img
              src="/images/icons/behance.png"
              alt="Behance"
              class="social-icon"
            />
          </a>

          <a
            href="https://www.youtube.com/@amrutabhatt3739"
            target="_blank"
            rel="noopener"
          >
            <img
              src="/images/icons/youtube.png"
              alt="Youtube"
              class="social-icon"
            />
          </a>
        </div>
      </aside>
      <main class="main-content">
        <slot />
      </main>
    </div>
  </body>
</html>
