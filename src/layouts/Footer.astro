---
const { isContactPage, isDoorFixed = false } = Astro.props;

const position = isDoorFixed ? 'fixed' : 'absolute';
const bottom = isDoorFixed ? '0' : 'none';
---
<footer class="footer" >
  <a href="/" class="door-link">
    <img
      src="/images/door/yellowdoorclose.png"
      alt="Closed Door"
      class="door-image door-closed"
    />
    <img
      src="/images/door/yellowdooropen.png"
      alt="Open Door"
      class="door-image door-open"
    />
  </a>
  {isContactPage && (
    <div class="mailbox-wrapper">
      <a href="mailto:ammsbbhatt@gmail.com" class="mailbox-link" title="Email Me">
        <img src="/images/mailbox.png" alt="Mailbox" class="mailbox-image" />
        <span class="tooltip">Send a message</span>
      </a>
      </div>
    )}
  </div>

</footer>
<style define:vars={{position, bottom}}>
  .footer {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 2rem;
    align-items: flex-end;
  }

  .door-link {
    position: relative;
    display: inline-block;
    width: 160px;
    height: auto;
    cursor: pointer;
  }

  .door-image {
    position: var(--position);
    bottom: var(--bottom);
    left: 50%;
    width: 100%;
    max-width: 160px;
    transition: opacity 0.3s ease-in-out;
  }

  .door-open {
    opacity: 0;
    z-index: 1;
  }

  .door-link:hover .door-open {
    opacity: 1;
  }

  .door-link:hover .door-closed {
    opacity: 0;
  }
  mailbox {

  position: fixed;
  bottom: 0;
  left: 50px; /* adjust horizontal placement */
  z-index: 10; /* so it appears above background */
}
 .mailbox-link {
  left: 58%;
    bottom: -2px;
    position: fixed; /* pins it relative to viewport */
    width: 100px;
    cursor: pointer;
    z-index: 100;
  }

  .mailbox-image {

    width: 140%;
    height: auto;
    transition: transform 0.2s ease-in-out;
  }

  .mailbox-link:hover .mailbox-image {
    transform: scale(1.1);
  }
.mailbox-wrapper {
  position: relative;
  display: inline-block;
}

.tooltip {
  position: absolute;
  bottom: 120%;
  left: 50%;
  transform: translateX(-50%) scale(0.8);
  background: black;
  color: white;
  padding: 6px 10px;
  border-radius: 4px;
  font-size: 0.85rem;
  white-space: nowrap;
  opacity: 0;
  pointer-events: none;

  animation: tooltipPop 0.6s ease forwards 0.5s, tooltipFadeOut 0.5s ease forwards 3s;
}

.tooltip::after {
  content: '';
  position: absolute;
  top: 100%;
  left: 50%;
  transform: translateX(-50%);
  border-width: 5px;
  border-style: solid;
  border-color: black transparent transparent transparent;
}

@keyframes tooltipFadeOut {
  to {
    opacity: 0;
    transform: translateX(-50%) scale(0.9);
  }
}
@keyframes tooltipPop {
  0% {
    opacity: 0;
    transform: translateX(-50%) scale(0.8);
  }
  60% {
    opacity: 1;
    transform: translateX(-50%) scale(1.05);
  }
  80% {
    transform: translateX(-50%) scale(0.95);
  }
  100% {
    opacity: 1;
    transform: translateX(-50%) scale(1);
  }
}
</style>