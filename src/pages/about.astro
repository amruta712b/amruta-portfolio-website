---
import FixedSidebarLayout from '../layouts/FixedSidebarLayout.astro';
import Footer from '../layouts/Footer.astro';
---
<FixedSidebarLayout title="About">
  <div class="yellow-section">
  <div class="about-page-wrapper">
    <section class="intro-section">
      <h1 class="highlight-line">Namaste! Iâ€™m Amruta Bhatt</h1>
      <p class="highlight-line subtext">based, in Vadodara</p>
       </section>
       <section class="profession">
       <h1 class="highlight-line role-heading">I am an</h1>
       <p class="highlight-line subtext">Architect. Illustrator. Visual designer</p>
       </section>
       <section class="description">
        <h1 class="highlight-line role-heading">Curls, love for dogs</h1>
         <p class="highlight-line subtext">describe me aptly</p>
       </section>
      </div>
        <a href="/introvert" class="more-about-button">
        click here
        <span class="cta-subtext">to know more about me</span>
      </a>
    </div>
      <section class="notes-section">
  <div class="note-row">
    <img src="/images/notes/note1.jpg" alt="Note 1" class="note-image" />

    <div class="speechbubble-image-wrapper">
      <p class="speechbubble-text">Notes I have been taking</p>
    </div>
  </div>

  <div class="note-row">
    <img src="/images/notes/workinprogress.png" alt="Note 2" class="note-image" />
    <div class="speechbubble-image-wrapper">
      <p class="speechbubble-text">Work in progress</p>
    </div>
  </div>

   <div class="note-row">
    <img src="/images/notes/quote.jpg" alt="Note 3" class="note-image" />
    <div class="speechbubble-image-wrapper">
      <p class="speechbubble-text">Interesting quote</p>
    </div>
  </div>
</section>
  <div style="background-color: white">
   <Footer />
   </div>
  </FixedSidebarLayout>


  <style>
    .about-page-wrapper {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

.highlight-line {
  color: #FBD21A;
    background-color: white;
    display: inline-block;
    padding: 0.2rem 0.5rem;
    margin-bottom: 1rem;
    transition: transform 0.3s ease, background-color 0.3s ease, color 0.3s ease;
  cursor: pointer;
  }
   {
  transform: scale(1.05) rotate(-1deg);
  background-color: #FBD21A;
  color: black;
}
.highlight-line:hover,
.subtext:hover {
  transform: scale(1.05) rotate(-1deg);
  background-color: #FBD21A;
  color: black;
}
    .about-page {
    padding: 2rem;
    font-weight: 700;
    text-align: left;
    color: #FBD21A;
  }
  .subtext {
    font-size: 1.25rem;
    font-family: 'Source Sans 3', sans-serif;
  }

  .more-about-button {
   position: fixed;
  bottom: 2rem;
  right: 2rem;
  background-color: #ffffff;
  color: #FBD21A;
  font-weight: 700;
  text-decoration: none;
  padding: 1rem 1.5rem;
  border-radius: 5px;
  font-family: 'Source Sans 3', sans-serif;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
  }

  .more-about-button:hover {
    background-color: black;
    color: #FBD21A;
  }

  .more-about-subtext {
    display: block;
    font-size: 0.875rem;
    font-weight: 400;
    margin-top: 0.25rem;
    color: #444;
  }
   .notes-section {
    background-color: white;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
.note-row {
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
    gap: 4rem;
    margin-bottom: 6rem;
    margin-top: 2rem;
  }

  .note-image {
    width: 300px;
    height: auto;
    border-radius: 2rem;
    border:#FBD21A solid 13px;
  }
  .speech-bubble {
    position: relative;
    background: white;
    border: 1px solid #999;
    border-radius: 1rem;
    padding: 1rem 1.5rem;
    max-width: 250px;
    font-weight: bold;
    color: #fbd21a;
  }

  .speech-bubble:after {
    content: '';
    position: absolute;
    right: -20px;
    top: 50%;
    transform: translateY(-50%);
    border: 10px solid transparent;
    border-left-color: white;
  }
.speechbubble-image-wrapper {
  position: relative;
  width: 300px;
  height: 150px;
  background-image: url('/images/speechbubble/speechbubble.png');
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 1rem;
  text-align: center;
}
.speechbubble-text {
  font-weight: bold;
  color: #FBD21A;
  font-size: 1rem;
  z-index: 1;
}
  </style>