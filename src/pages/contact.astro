---
import FixedSidebarLayout from "../layouts/FixedSidebarLayout.astro";
import "../styles/global.css";
import Footer from "../layouts/Footer.astro";
---

<FixedSidebarLayout title="Contact">
  <div class="contact-container">
    <!-- Illustration with speech bubble -->
    <div class="illustration-wrapper">
      <img
        src="/images/contact.png"
        alt="Contact Illustration"
        class="contact-illustration"
      />
      <div class="speech-bubble">
        Welcome to my little online living room. <br />If you share a soft spot
        for lines, strokes, dogs, and the occasional curl (just a lil’), then
        we’re already off to a great start! Got a project, an idea, or a good
        pun? I’m all ears (and occasionally, paws).
      </div>
    </div>
  </div>
</FixedSidebarLayout>

<Footer isContactPage={true} isDoorFixed={true} />

<style>
  .contact-container {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    background-color: white;
    padding: 2rem;
    justify-content: space-between; /* pushes mailbox to bottom */
    min-height: 100vh;
  }

  .illustration-wrapper {
    position: relative;
    display: inline-block;
  }

  .contact-illustration {
    display: block;
    height: 100vh;
    object-fit: contain; /* or cover if you want full fill */
    background: white;
    max-width: 500px;
    height: auto;
  }

  .speech-bubble {
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 50%; /* center vertically */
    left: 100%;
    background: #fffbe6;
    color: black;
    padding: 1rem;
    border-radius: 8px;
    border: 2px solid #fbd21a;
    font-family: sans-serif;
    font-size: 1rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    opacity: 0;
    transform: translate(20px, -50%); /* keep vertical centering */
    transition:
      opacity 0.3s ease,
      transform 0.3s ease;
    width: 300px; /* wider bubble */
    text-align: left; /* center the text inside */
  }

  /* Show bubble on hover */
  .illustration-wrapper:hover .speech-bubble {
    opacity: 1;
    transform: translateX(200px);
  }

  /* Speech bubble arrow */
  .speech-bubble::after {
    content: "";
    position: absolute;
    top: 20px;
    left: -10px;
    border-width: 10px;
    border-style: solid;
    border-color: transparent #fffbe6 transparent transparent;
  }
  :global(.main-content) {
    background: white;
  }
</style>
