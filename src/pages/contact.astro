---
import FixedSidebarLayout from '../layouts/FixedSidebarLayout.astro';
import "../styles/global.css";
import Footer from '../layouts/Footer.astro';
---
<FixedSidebarLayout title="Contact">

<div class="contact-page">
    <div class="contact-content">



      <!-- Optional Text -->
      <div class="contact-text">
        <p>Step up to the door & drop me a mail!</p>
      </div>
    </div>
  </div>
</FixedSidebarLayout>
<Footer isContactPage={true} />

<style>
  .contact-page {
    background-color: white;
    min-height: 70vh; /* to fill most of the viewport */
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .contact-content {
    display: flex;
    align-items: center;
    gap: 2rem;
    text-align: center;
  }

  .contact-content img {
    max-width: 150px;
    height: auto;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .contact-content img:hover {
    transform: scale(1.05);
  }

  .contact-text {
    font-size: 1.2rem;
    font-family: sans-serif;
    color: #333;
  }
</style>
