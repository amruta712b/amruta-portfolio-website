---
// index.astro
import FixedSidebarLayout from '../layouts/FixedSidebarLayout.astro';
import "../styles/global.css";

const windowIllustrations = [
	{
		src: '/public/images/homepage/windows/window1.png',
		 top: '10%',
    left: '60%',
    link: '#' // You can later replace this with real links
  }
]
---

<FixedSidebarLayout title="Home">
  <div class="homepage">
	<h1 class="namaste">Namaste</h1>
  </div>
	<div class="window-container">
    {
      windowIllustrations.map((win) => (
        <a href={win.link} class="window-link" style={`top: ${win.top}; left: ${win.left};`}>
          <img src={win.src} alt="Window" class="window-img" />
        </a>
      ))
    }

</FixedSidebarLayout>

<style>
	.window-container {
  position: relative;
  width: 100%;
  height: 100vh;
}
	.homepage {
  position: relative;
  width: 100%;
  height: 100vh;
  background-color: #FBD21A;
  overflow: hidden;
}
.namaste {
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 100px;
  font-family: 'Lilita One', cursive;
  color: #fff7b3c6;
  z-index: 10;
}
</style>